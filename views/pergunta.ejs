<%- include ('partials/header.ejs') %>
<body>
    <%- include ('partials/navbar.ejs') %>
    
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form method="POST", action="/responder">
            <h3>Responda</h3>
            <div class="form-group">
                <label for="corpo">Resposta:</label>
                <textarea placeholder="Digite sua resposta" class="form-control" id="corpo" name="corpo"></textarea>
                <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            </div>
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach((resposta) => { %>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>
            <br>
        <% }) %>
    </div>
</body>
<%- include ('partials/footer.ejs') %>